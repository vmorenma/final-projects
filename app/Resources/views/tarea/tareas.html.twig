{% extends '::base.html.twig' %}

{% block body %}
    <h1>Tareas que te han assignado</h1>
    <div class="jumbotron">
        <div class="container-fluid">
            <h2>Tareas</h2>
            {% if tareas|length == 0 %}
                <h2>No hay tareas assignadas a este proyecto</h2>
            {% endif %}
            {% for tarea in tareas %}
                <div id="proyecto" class="container-fluid" style="padding: 10px;;margin: 10px; background-color:#f5f5f5">
                    <div class="col-sm-1">

                        <input type="checkbox" onclick="window.location.href='{{ path('app_tarea_completar', {'id': tarea.id}) }}'"
                                {% if tarea.completada %}
                                    checked
                                {% endif %}
                        />
                    </div>
                    <div class="col-sm-11" style="padding: 10px;">
                        <span class="margen-iz2">{{ tarea.nombre }}</span>
                        <hr>
                        <span class="margen-iz2">
                                    <span class=" margen-iz2 glyphicon glyphicon-calendar"></span>
                                    Fecha de entrega: {{ tarea.endDate|date('d-m-Y') }}
                                </span>
                        <hr>
                        <span class="margen-iz2">Descripci√≥n: {{ tarea.descripcion }}</span>
                        <br />
                        <hr>
                        <div class="container-fluid">

                            <div class="col-xs-6">
                                <span class="margen-iz2">Proyecto: {{ tarea.proyecto.nombre }}</span>
                                <br />
                                <span class="margen-iz2">Coste : {{ tarea.coste }}</span>
                                <br />
                            </div>
                            <div class="col-xs-6">
                                <span class="margen-iz2">Completada : {{ tarea.completada ? 'Si':'No' }}</span>
                                <br />
                                <span class="margen-iz2">Fecha inicio : {{ tarea.startDate|date('d-m-Y') }}</span>
                                <br />
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}